{
  "manifest_version": 3,
  "name": "Digikala & Torob Price Finder",
  "version": "0.0.1",
  "description": "Find the best prices for products on Digikala and Torob",
  "permissions": ["activeTab", "storage", "scripting", "tabs", "windows"],
  "host_permissions": [
    "https://www.digikala.com/*",
    "https://api.digikala.com/*",
    "https://torob.com/*",
    "https://api.torob.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_title": "Digikala & Torob Price Finder"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.digikala.com/product/*",
        "https://torob.com/p/*"
      ],
      "js": ["src/js/content.js"],
      "css": ["src/css/content.css"]
    },
    {
      "matches": [
        "https://torob.com/*"
      ],
      "js": ["src/js/torob-width-fix.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["src/js/universal-product-detector.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/js/background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/fonts/*.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}
